(ns translation-reader.screens.signup
  (:require
   ["package:flutter/material.dart" :as m]
   ["package:mongol/mongol.dart" :as mgl]
   [cljd.flutter :as f]
   [translation-reader.services.auth :as auth-service]
   [translation-reader.widgets.auth :as widgets]))
   
(defn ^m/Widget screen [ctx]
  (f/widget
   :get {navigator m/Navigator
         {{primary-color .-primary} .-colorScheme} m/Theme}
   :managed [email-controller (m/TextEditingController)
             password-controller (m/TextEditingController)
             password-confirmation-controller (m/TextEditingController)]
   (m/Scaffold)
   .body
   (m/Padding
    .padding (m.EdgeInsets/only .top 40))
   (m/Center)
   (m/Container
    .width 400)
   (m/Padding
    .padding (.all m/EdgeInsets 20))
   (m/Column
    .children
    [(widgets/field email-controller "Email")
     (m/SizedBox .height 25)
     (widgets/field  password-controller "Password")
     (m/SizedBox .height 25)
     (widgets/field  password-confirmation-controller "Confirmation")
     (m/SizedBox .height 40)
     (f/widget
      (m/Container .height 100)
      (m/Row
       .children
       [(m/GestureDetector
         .onTap (fn []
                  (.pushNamed navigator "/login")
                  nil)
         .child
         (mgl/MongolRichText
          .text (m/TextSpan
                 .text "Already have an account?"
                 .style (m/TextStyle .fontSize 16)
                 .children [(m/TextSpan .text " Login"
                                        .style (m/TextStyle .color primary-color
                                                            .fontSize 16))])))
        (widgets/rounded-button (fn [] (auth-service/signup
                                             ctx
                                             navigator
                                             {"email" (.-text email-controller)
                                              "password" (.-text password-controller)
                                              "password_confirmation" (.-text password-confirmation-controller)}))
                                     "Done")]))])))